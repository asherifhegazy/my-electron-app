{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off"
      }
    },
    "ignore": ["node_modules", "dist", "build"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  }
}
